@inject IProductService ProductService


<ul class="list-unstyled">
    @foreach (var product in CategoryID == null ? ProductService.Products : 
    ProductService.Products.Where(p => p.CategoryId == CategoryID))
    {
        <li class="media my-3">
            <div class="media-image-wrapper mr-2">
                <a href="/product/@product.Id">
                <img class="media-img" src="@product.Image" alt="@product.Title" />    
                </a>
            </div>
            <div class="media-body">
                <a href="/product/@product.Id">
                    <h4 class="mb-2">@product.Title</h4>
                </a>
            </div>
            <p>@product.Description</p>
            @if (product.OriginalPrice > product.Price )
            {
                <h6 class="original-price text-muted">£@product.OriginalPrice</h6>
            }
            <h5>
                @product.Price
            </h5>
        </li>
    }

</ul>

@code {
    [Parameter]
    public int? CategoryID { get; set; } = null;

    protected override async Task OnInitializedAsync()
    {
       await  ProductService.LoadProducts();
    }


}
